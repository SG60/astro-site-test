---
import "../styles/global.css";
import DefaultHeadElements from "@components/DefaultHeadElements.astro";
import Header from "@components/Header.astro";

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <DefaultHeadElements {title} {description} />
    <slot name="head" />
    <script hoist type="module">
      import Swup from "swup";
      import SwupHeadPlugin from "@swup/head-plugin";
      const swup = new Swup({
        animationSelector: '[class*="swup-transition-"]',
        containers: ["#swup", "nav"],
        plugins: [new SwupHeadPlugin()],
      });
    </script>
  </head>
  <body class="text-text bg-background">
    <Header />
    <main class="py-8 px-4 grid justify-center swup-transition-fade" id="swup">
      <slot />
    </main>
  </body>
</html>

<style>
  .swup-transition-fade {
    transition: 0.1s ease-in;
    opacity: 1;
  }
  html.is-animating .swup-transition-fade {
    opacity: 0;
  }
</style>
